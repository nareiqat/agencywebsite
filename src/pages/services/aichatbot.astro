---
import BaseLayout from "src/layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
import Landing from "@components/Landing.astro";
import { Image } from "astro:assets";

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import { getOptimizedImage } from "@js/utils";
import landingImage from "@assets/images/landing.jpg"; // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
const optimizedImage = await getOptimizedImage(landingImage);
import chatbotImage from "../../assets/images/chatbot-demo.jpg"; // Update with your chatbot image
---

<BaseLayout
  title="AI Chatbot Development Services"
  description=`Enhance customer service with NCAT Digital Agency's AI chatbot solutions. 
  We create intelligent, responsive chatbots that provide 24/7 customer support, 
  improve response times, and boost customer satisfaction. Transform your customer experience today!`
  preloadedImage={optimizedImage}
>
  <Landing title="AI Chatbot Development" image={optimizedImage} />

  <section id="content-page-714">
    <div class="cs-container">
      <div class="cs-content">
        <h1 class="cs-title">
          Revolutionize Your Customer Service with <span class="cs-color"
            >AI-Powered Chatbots</span
          >
        </h1>
        <h2>Intelligent Customer Support Solutions</h2>
        <h3>24/7 Automated Customer Assistance</h3>
        <h4>Smart Conversations That Convert</h4>
        <p>
          At NCAT Digital Agency, we develop sophisticated AI chatbots that
          transform how you interact with customers. Our intelligent chatbots
          provide instant, accurate responses to customer inquiries, reduce wait
          times, and deliver exceptional user experiences around the clock. From
          simple FAQ responses to complex customer service workflows, our
          chatbots handle it all seamlessly.
        </p>
        <p>
          Modern customers expect immediate responses and 24/7 availability. Our
          AI chatbots integrate seamlessly with your existing website and
          business processes, learning from every interaction to provide
          increasingly personalized and helpful responses. <strong
            >Boost customer satisfaction while reducing operational costs.</strong
          >
        </p>
        <h3>Why Choose Our AI Chatbot Solutions?</h3>
        <ol>
          <li>
            Instant customer support available 24/7 without human intervention.
          </li>
          <li>
            Reduced response times leading to higher customer satisfaction
            scores.
          </li>
          <li>
            Cost-effective solution that scales with your business growth.
          </li>
          <li>
            Advanced natural language processing for human-like conversations.
          </li>
          <li>
            Seamless integration with your existing CRM and support systems.
          </li>
        </ol>
        <h4>Get Your AI Chatbot Today</h4>
        <ul>
          <li>Free consultation to assess your customer service needs.</li>
          <li>
            Custom chatbot design tailored to your brand voice and processes.
          </li>
          <li>
            Comprehensive training and ongoing support for optimal performance.
          </li>
          <li>
            Analytics and insights to continuously improve customer
            interactions.
          </li>
        </ul>
      </div>
      <div class="cs-image-group">
        <div class="cs-picture">
          <Image
            loading="lazy"
            decoding="async"
            src={chatbotImage}
            alt="AI chatbot interface showing customer service conversation"
            width="570"
            height="680"
            aria-hidden="true"
          />
        </div>
      </div>
    </div>
  </section>
  <CTA />
</BaseLayout>
<style lang="less">
  // /* Mobile - 360px */
  @media only screen and (min-width: 0rem) {
    #content-page-714 {
      padding: var(--sectionPadding);
      background-color: var(--bodyTextColorWhite);
      /* clips the wave background from causing overflow issues when it goes off screen */
      overflow: hidden;
      position: relative;
      z-index: 1;

      .cs-container {
        width: 100%;
        max-width: (1280/16rem);
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        /* 48px - 64px */
        gap: clamp(3rem, 6vw, 4rem);
        position: relative;
      }

      .cs-content {
        /* set text align to left if content needs to be left aligned */
        text-align: left;
        width: 100%;
        max-width: (738/16rem);
        display: flex;
        flex-direction: column;
        /* centers content horizontally, set to flex-start to left align */
        align-items: flex-start;

        img {
          width: 100%;
          height: auto;
          margin: (16/16rem) 0;
          display: block;
        }
      }
      .cs-title {
        color: var(--secondaryDark);
      }

      h2,
      h3,
      h4,
      h5,
      h6 {
        font-weight: 700;
        text-align: inherit;
        margin: 0 0 (16/16rem) 0;
        color: var(--secondaryDark);
      }

      h2 {
        font-size: (32/16rem);
        margin-top: (32/16rem);
      }

      h3 {
        font-size: (24/16rem);
        color: var(--primaryLight);
      }

      h4,
      h5,
      h6 {
        font-size: (20/16rem);
      }

      .cs-button-solid {
        margin-bottom: (32/16rem);
      }

      .cs-color {
        color: red;
      }

      p {
        font-size: var(--bodyFontSize);
        line-height: 1.5em;
        text-align: inherit;
        width: 100%;
        margin: 0 0 (16/16rem) 0;
        font-family: poppins, sans-serif;
        color: var(--bodyTextColor);
        &:last-of-type {
          margin-bottom: (32/16rem);
        }

        a {
          font-size: inherit;
          line-height: inherit;
          text-decoration: underline;
          color: var(--primary);
        }
      }

      ol,
      ul {
        padding-left: (24/16rem);
        margin: 0 0 (32/16rem) 0;
        color: var(--bodyTextColor);
        display: flex;
        flex-direction: column;
        gap: (16/16rem);
        font-family: poppins, sans-serif;
      }

      ul {
        li {
          list-style: none;
          color: inherit;
          position: relative;

          &:before {
            /* custom list bullet */
            content: "";
            width: 3px;
            height: 3px;
            background: currentColor;
            opacity: 1;
            border-radius: 50%;
            position: absolute;
            display: block;
            top: (10/16rem);
            left: (-12/16rem);
          }
        }
      }

      .cs-image-group {
        /* scales the whole section down and ties the font size to the vw and stops at 70% of the vale of 1em, changes at desktop */
        font-size: ~"min(1vw, 1em)";
        /* everything inside this box is in ems so we can scale it all down proportionally with a font size */
        width: (542/16em);
        height: (773/16em);
        display: none;
        /* prevents flexbox from squishing it */
        flex: none;
        position: relative;
        z-index: 1;
      }

      .cs-picture {
        width: (542/16em);
        height: (647/16em);
        border-radius: (285/16em);
        border: (12/16em) solid #fff;
        background-color: #f7f7f7;
        /* prevents border from affecting height and width */
        box-sizing: border-box;
        /* clips img tag corners */
        overflow: hidden;
        display: block;
        position: absolute;
        top: 0;
        left: 0;

        img {
          width: 100%;
          height: 100%;
          /* makes it act like a background image */
          object-fit: cover;
          position: absolute;
          top: 0;
          left: 0;
        }
      }

      .cs-flower {
        width: (362/16em);
        height: auto;
        display: block;
        position: absolute;
        bottom: (-38/16em);
        right: (-48/16em);
        z-index: -1;
        transform: rotate(142deg);
      }

      .cs-sense {
        width: (80/16em);
        height: auto;
        position: absolute;
        top: (-4/16em);
        left: (10/16em);
        transform: rotate(90deg);
      }

      .cs-background {
        display: none;
      }
    }
  }

  /* Tablet - 768px */
  @media only screen and (min-width: 48rem) {
    #content-page-714 {
      .cs-container {
        flex-direction: row;
        align-items: flex-start;
      }

      .cs-image-group {
        display: block;
        /* sends it to the left in the 1st position */
        order: -1;
      }

      .cs-content {
        margin-left: auto;
      }

      .cs-background {
        width: 20%;
        height: 100%;
        background-color: #f7f7f7;
        display: block;
        position: absolute;
        left: 0;
        top: 0;
        z-index: -1;

        img {
          width: 100%;
          height: 100%;
          opacity: 0.2;
          object-fit: cover;
          position: absolute;
          top: 0;
          left: 0;
          z-index: 1;
        }
      }
    }
  }

  /* Large Desktop 1300px */
  @media only screen and (min-width: 81.25rem) {
    #content-page-714 {
      .cs-image-group {
        /* position absolute so we can have it overflow the container as seen in the design. */
        font-size: inherit;
        position: absolute;
        top: (0/16rem);
        left: (-100/16rem);
      }

      .cs-background {
        width: 50%;
        /* with the left edge always positioned at the center line, we push right of the center line by 335px.  This ensures that this element will stay exactly in this position no matter hoe wide the screen gets */
        margin-right: (335/16rem);
        left: auto;
        /* sets the right edge of the element to be at the center line */
        right: 50%;
      }
    }
  }

  /* Dark Mode */
  @media only screen and (min-width: 0rem) {
    body.dark-mode {
      #content-page-714 {
        background-color: var(--dark);

        .cs-title,
        .cs-text,
        h2,
        h3,
        h4,
        h5,
        h6,
        li,
        p {
          color: var(--secondaryLight);
        }
        .cs-color,
        a {
          color: red;
        }

        p,
        li {
          color: #ebebeb;
        }

        .cs-picture {
          border-color: var(--dark);
          background-color: var(--dark);
        }

        .cs-flower {
          filter: brightness(50%);
        }

        .cs-sense {
          filter: brightness(150%);
        }

        .cs-background {
          background-color: var(--medium);
          filter: brightness(70%);
          img {
            opacity: 0.1;
          }
        }
      }
    }
  }
</style>
