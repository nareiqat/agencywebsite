<div class="modal" id="dealModal">
  <div class="modal-content">
    <h2>Limited Time Deal!</h2>
    <p style="text-transform: uppercase;">3 Month free trial!</p>
    <p style="text-transform: uppercase;">Cancel Anytime with no cost</p>
    <p>OFFER ENDS FEB 1st</p>
    <div class="timer" id="timer">00:15</div>
    <a href="#pricing">
      <button id="closeModal">Grab the Deal!</button>
    </a>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("dealModal") as HTMLElement;
    const closeModal = document.getElementById(
      "closeModal"
    ) as HTMLButtonElement;
    const timer = document.getElementById("timer") as HTMLElement;

    // Show the modal when the page loads
    modal.style.display = "flex";

    // Countdown timer setup
    let countdown = 15;
    const interval = setInterval(() => {
      countdown--;
      if (countdown < 10) {
        timer.textContent = `00:0${countdown}`;
        timer.classList.add("low-time");
      } else {
        timer.textContent = `00:${countdown}`;
      }
      if (countdown === 0) {
        clearInterval(interval);
        modal.style.display = "none"; // Hide modal when timer ends
      }
    }, 1000);

    // Close modal on button click
    closeModal.addEventListener("click", () => {
      modal.style.display = "none";
      clearInterval(interval);
    });

    // Close modal when clicking outside the modal content
    modal.addEventListener("click", (event) => {
      if (event.target === modal) {
        modal.style.display = "none";
        clearInterval(interval);
      }
    });
  });
</script>

